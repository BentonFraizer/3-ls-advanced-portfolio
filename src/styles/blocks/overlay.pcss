.overlay {
  z-index: -10;
  display: none;
  @include phones {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: #fff;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: all .4s;
    display: flex; // менять на "display: flex;" при нажатии на кнопку меню.
  }
  &--active {
    opacity: 1;
    z-index: 1000;
  }
}