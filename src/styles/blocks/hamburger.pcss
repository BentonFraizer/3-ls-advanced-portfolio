.hamburger {
  @media screen and (min-width: 1200px) {
    display: none;
  } 
  
  @include desktopHd {
    display: none;
  }

  @include desktopHd {
    display: none;
  }

  @include desktop {
    display: none;
  }

  @include tablets {
    display: block;
  }
  margin-top: 6px;
  margin-right: 15px;
  height: 30px;
}

.hamburger__plank {
  display: block;
  width: 34px;
  height: 6px;
  background-color: #fff;
  margin-bottom: 6px;

  &:last-child {
    margin-bottom: 0;
  }
}