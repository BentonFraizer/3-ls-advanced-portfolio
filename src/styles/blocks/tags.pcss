.tags {
  display: flex;
  margin-bottom: 8%;

  @include desktop {
    margin-bottom: 11%;
  }
}

.tags__item {
  background: #ECEFF2;
  border-radius: 40px;
  padding: 14px 22px;
  margin-right: 2%;

  &:last-child {
    margin-right: 0;
  }

  @include desktop {
    margin-right: 4%;
  }
}

.tag {
  line-height: 1.8;
}