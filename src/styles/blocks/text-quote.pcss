.text-quote__author {
  font-style: italic;
  font-size: 16px;
  color: #fff;
}

.text-quote__text {
  margin-bottom: 29px;
  line-height: 1.9;

  @include desktop {
    line-height: 2;
  }

  @include tablets {
    line-height: 1.7;
    letter-spacing: 0px;
    padding-right: 5px;
    margin-bottom: 20px;
  }

  @include phones {
    line-height: 1.75;
    margin-bottom: 30px;
  }
}