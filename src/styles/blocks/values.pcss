section.values {
  @include desktop {
    min-height: 1020px;
  }

  @include tablets {
    min-height: 1222px;
  }

  @include phones {
    min-height: 1488px;
  }
}

.values {
  background:  url('~images/bg/values-bg.jpg') center top / cover no-repeat;
  position: relative;
  
  &::before {
    content: url("~images/bg/values-hands-bg.png");
    position: absolute;
    top: 15%;
    left: 0;
    z-index: 0;
  }
  
  @include desktop {
    &::before {
      content: url("~images/bg/values-hands-bg-1200.png");
      position: absolute;
      top: 37%;
      left: 0;
      z-index: 1;
    }
  }

  @include tablets {
    &::before {
      content: url("~images/bg/values-hands-bg-768.png");
      position: absolute;
      bottom: -4px;
      left: 18%;
      top: auto;
      right: auto;
      z-index: 1;
    }
  }

  @include phones {
    &::before {
      content: url("~images/bg/values-hands-bg-480.png");
      position: absolute;
      bottom: -4px;
      left: 0;
      top: auto;
      right: auto;
      z-index: 1;
    }
  }
}

.values__container {
  padding-top: 142px;
  z-index: 1;
  width: 90%;
  
  @include desktop {
    padding-top: 154px;
  }

  @include tablets {
    padding-top: 50px;
    text-align: center;
  }

  @include phones {
    padding-top: 86px;
    text-align: left;
  }
}

.values__widget {
  display: flex;
  justify-content: flex-end;
  padding: 5.3% 13.5% 0 0;

  @include desktop {
    padding: 0 10.5% 0 0;
  }

  @include tablets {
    padding: 0;
    justify-content: center;
  }
}

.values__title {
  display: flex;
  flex-direction: column;

  @include desktop {
    margin-bottom: 100px;
  }

  @include tablets {
    margin-bottom: 57px;
  }

  @include phones {
    padding-left: 15px;
    margin-bottom: 80px;
  }
}

.values__title-text {
  font-weight: bold;
  font-size: 30px;
  margin-bottom: 3.5%;
  z-index: 1;

  @include desktop {
    padding-left: 26.3%;
    letter-spacing: 1.2px;
  }

  @include tablets {
    padding: 0 25%;
    font-size: 32px;
    margin-bottom: 35px;
  }

  @include phones {
    font-size: 26px;
    line-height: 1.6;
    padding: 0;
    margin-bottom: 30px;
  }
}

.values__content p {
  font-weight: 600;
  font-size: 16px;
  opacity: .8;
  padding: 0 23% 0 33%;
  line-height: 1.9;

  @include desktop {
    padding: 0 20% 0 26.5%;
    letter-spacing: .6px;
    line-height: 2;
  }

  @include tablets {
    padding: 0 17%;
    letter-spacing: 0;
    line-height: 1.75;
  }

  @include phones {
    padding: 0;
    line-height: 1.75;
  }
}