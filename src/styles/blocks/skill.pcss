.skill {
  position: relative;
  width: 166px;
  height: 166px;
}

.skill__circle {
  fill: transparent;

  &--layer--under {
    stroke: #E9E9E9;
    stroke-width: 2px;
    opacity: .1;
  }

  &--layer--above {
    stroke: #D47F1D;
    stroke-width: 6px;
    stroke-dasharray: 251;
    stroke-dashoffset: 150;
  }
}

.skill__title {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-weight: bold;
  font-size: 18px;
  opacity: .5;
  text-align: center;
}