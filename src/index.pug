extends ./main.layout.pug

block content
  .welcome-section
    section.hero
      .container.hero__container
        header.header
          a.logo(href='#') ВА
          nav.menu
            - var menuItems = ['Обо мне', 'Навыки', 'Работы', 'Отзывы']
            ul.menu__list
              each item in menuItems
                li.menu__item
                  a(href='#').menu__link #{item}

          - var socials = ['insta', 'vk', 'github', 'envelope'];
          ul.socials
            each item in socials
              li.socials__item
                a(href='#').socials__link
                  +icon(item, 'socials__icon')

        .userinfo
          .userinfo__title Личный сайт #[br] веб разработчика
          .userinfo__name Владимир Астаханов

        .hero__bottom-buttons
          button.scroll-down-btn Скролл
          +icon('scroll', 'scroll-down-icon')
    section.about
      .container.about__container 
        .about__user
          .user
            .user__avatar
              .user__avatar-style
                +image('content/user.jpg', 'user__avatar-pic')
            - 
              var userInfo = [
                ["Проживаю:", "Новосибирск"],
                ["Возраст:", "27 лет"],
                ["Родился:", "1 января 1991"],
              ];

            table.user__data
              each item in userInfo
                tr.user__data-row 
                  td.user__data-title #{item[0]}
                  td.user__data-content #{item[1]}
        .about__content
          .about__desc Привет, меня зовут
          .about__title Владимир Астаханов
          .about__text-info
            p Я занимаюсь разработкой современных сайтов и приложений. #[br] Мне нравится делать интересные и современные проекты.
          .about__ps Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
  .middle-section
    section.values
      .container.values__container
        .values__title
          h3.values__title-text Чем я могу быть полезен вам
          .values__content
            p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
        .values__widget
          -
            var skillsCategories = [
              ["Front-end", ["HTML5", "CSS3", "Javascript", "Jquery и Vue.js"]],
              ["Workflow", ["GIT", "Terminal", "Gulp", "Webpack"]],
            ];

          ul.skills
            each category in skillsCategories
              li.skills__item
                .skills-row
                  .skills-row__title #{category[0]}
                  ul.skills-row__list
                    each skill in category[1]
                      li.skills-row__item
                        .skill 
                          svg(viewBox="0 0 100 100").skill_circle-shape
                            circle(cx="50" cy="50" r="40").skill__circle.skill__circle--layer--under
                            circle(cx="50" cy="50" r="40" stroke="url(#gradient)" transform="rotate(180 50 50)").skill__circle.skill__circle--layer--above
                            linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0%")
                              stop(offset="0%" stop-color="#D0731B")
                              stop(offset="100%" stop-color="#DC9322")
                          .skill__title #{skill}
    section.works
      .container
        .section-title Мои работы
        .works__content
          .works-preview 
            .works-preview__pictures(data-slide="2")
              +image("content/slider-1.jpg", "works-preview__image")
              .works-preview__thumbs
                ul.thumbs
                  - for (var i = 4; i > 0; i--)
                    li.thumbs__item
                      a(href="").thumbs__link
                        +image(`content/slider-${i}.jpg`, "thumbs__pic")
              .works-preview__btns
                .square-btns
                  button(type="button").square-btns__item.square-btns__item--next
                  button(type="button").square-btns__item.square-btns__item--prev
            .works-preview__info
              - var tags = ["HTML", "CSS", "JavaScript"];
              ul.tags
                each item in tags
                  li.tags__item
                    .tag #{item}
              .works-preview__title Сайт школы образования
              .works-preview__desc
                p Этот парень проходил обучение #[br] веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
              a(href="").iconed-link Посмотреть сайт